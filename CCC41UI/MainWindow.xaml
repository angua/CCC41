<Window x:Class="CCCUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCCUI"
        xmlns:commonwpf="clr-namespace:CommonWPF;assembly=CommonWPF"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Height="1000" Width="1800">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" >
            <TreeView ItemsSource="{Binding FilesCollection}" SelectedItemChanged="OnScenarioChanged" >
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:ScenarioNode}" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

        </StackPanel>
        <StackPanel Margin="20,0,0,0" Grid.Column="1" Width="300">
            <StackPanel Margin="0,10,0,0"  Orientation="Horizontal">
                <TextBlock Text=" Level " />
                <TextBox Text="{Binding Level}" />
            </StackPanel>


            <StackPanel Margin="0,10,0,0"  Orientation="Horizontal">
                <TextBlock Text="{Binding CurrentFileDataSet.DataSetsCount}" />
                <TextBlock Text=" Data sets" />
            </StackPanel>

            <StackPanel Margin="0,10,0,0"  Orientation="Horizontal">
                <Button Padding="6" Command="{Binding PreviousDataSet}" Content="Previous"></Button>
                <TextBox Padding="6" Margin="10,0,0,0" Width="100" Text="{Binding CurrentDataSetIndex, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" />
                <Button Padding="6" Margin="10,0,0,0"  Command="{Binding NextDataSet}" Content="Next"></Button>
            </StackPanel>

            <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                <TextBlock Width="150" Text="Time limit" />
                <TextBlock Text="{Binding CurrentDataSet.TimeLimit}" />
            </StackPanel>

            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock Width="150" Text="Time used" />
                <TextBlock Text="{Binding TimeUsed}" />
            </StackPanel>

            <Button Margin="0,30,0,0" Padding="6" Command="{Binding WriteOutputFiles}" Content="WriteOutputFiles"></Button>
            <Button Margin="0,30,0,0" Padding="6" Command="{Binding Solve}" Content="Solve"></Button>
            <Button Margin="0,30,0,0" Padding="6" Command="{Binding Simulation}" Content="Start Simulation"></Button>

            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock Width="150" Text="Calculation time (ms)" />
                <TextBlock Text="{Binding Timing}" />
            </StackPanel>


            <TextBlock Width="100" Margin="0,10,0,0" HorizontalAlignment="Left" Text="Sequences:" />
            <TextBox Text="{Binding Sequences}" TextWrapping="NoWrap"   />

            <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                <TextBlock Width="150" HorizontalAlignment="Left" Text="Valid: " />
                <TextBlock Text="{Binding DataSetValid}" />
            </StackPanel>

            <TextBlock Margin="0,10,0,0" HorizontalAlignment="Left"  Width="100" Text="Errors: " />
            <TextBlock Text="{Binding DataSetErrors}" TextWrapping="Wrap" />

            <TextBlock Margin="0,30,0,0" HorizontalAlignment="Left"  Width="100" Text="All Files: " />
            <TextBlock Margin="0,10,0,0"  Width="100" Text="{Binding ValidityOverview}" />



        </StackPanel>

        <ScrollViewer Margin="20,0,0,0" Grid.Column="2"  VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <Image Source="{Binding Image.Source}" VerticalAlignment="Top" HorizontalAlignment="Left" />
        </ScrollViewer>

    </Grid>
</Window>

